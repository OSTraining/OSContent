<?xml version="1.0" encoding="utf-8"?>
<extension version="3.7" type="component" method="upgrade">
    <name>com_oscontent</name>
    <author>Joomlashack</author>
    <creationDate>October 28 2016</creationDate>
    <copyright>Copyright (C) 2011-2018 Open Source Training, LLC, All rights reserved</copyright>
    <license>GPL v3</license>
    <authorEmail>help@joomlashack.com</authorEmail>
    <authorUrl>https://www.joomlashack.com</authorUrl>
    <version>1.12.1</version>
    <variant>FREE</variant>
    <description>COM_OSCONTENT_COMPONENT_DESCRIPTION</description>

    <scriptfile>script.installer.php</scriptfile>

    <administration>
        <menu img="components/com_oscontent/media/images/oscontent.png">COM_OSCONTENT</menu>

        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>oscontent.php</filename>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>language</folder>
            <folder>media</folder>
            <folder>models</folder>
            <folder>tables</folder>
            <folder>views</folder>
            <folder>library</folder>
            <folder>form</folder>
        </files>
    </administration>

    <media destination="com_oscontent" folder="media">
        <folder>css</folder>
        <folder>js</folder>
        <folder>images</folder>
        <folder>fonts</folder>
    </media>

    <updateservers>
        <server type="extension" priority="1" name="OSContent Updates"><![CDATA[http://deploy.ostraining.com/client/update/free/stable/com_oscontent]]></server>
    </updateservers>

    <alledia>
        <element>oscontent</element>
        <namespace>OSContent</namespace>
        <license>free</license>
        <targetplatform>3.*</targetplatform>
        <relatedExtensions>
            <extension
                type="library"
                element="allediaframework"
                >AllediaFramework</extension>

            <extension
                type="plugin"
                group="system"
                element="ossystem"
                publish="true"
                ordering="first"
                >OSSystem</extension>
        </relatedExtensions>
        <include>AllediaFreeDefaultFiles</include>
    </alledia>
</extension>
